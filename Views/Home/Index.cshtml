@using GDStock.Models
@model dynamic

@{ int count = 0;
    int MinStock = 2;
        }

<div class="row">
    <div class="col-12 col-xl-8 mb-2 mb-xl-0">
        <h3 class="font-weight-bold mb-4">Welcome to Inventy!</h3>
    </div>
</div>

<div class="row">
    @*Welcome Image*@
    <div class="col-md-6 grid-margin">
        <div class="card">
            <div class="card-people mt-auto">
                <img src="~/Content/image/people.svg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>8<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">Rabat</h4>
                            <h6 class="font-weight-normal">Morocco</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*Stock Overview*@
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Total Clients</p>
                        <p class="fs-30 mb-2">@Model.Clients.Count</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Drivers</p>
                        <p class="fs-30 mb-2">@Model.Drivers.Count</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Total Suppliers</p>
                        <p class="fs-30 mb-2">@Model.Suppliers.Count</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Total Products</p>
                        <p class="fs-30 mb-2">@Model.Stocks.Count</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @*No of Users*@
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="font-weight-medium text-dark display-5 mb-4">No. of Users</p>
                <div class="row">
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card" style="background-color: #F5F7FF">
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="bi bi-people-fill fs-30" style="color: #1DB593"></i>
                                </div>
                                <p class="text-dark mb-2">Total Users</p>
                                <p class="fs-30 text-dark font-weight-bold">1.8k</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card" style="background-color: #F5F7FF">
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="bi bi-people-fill fs-30" style="color: #4b49ac"></i>
                                </div>
                                <p class="text-dark mb-2">Total Clients</p>
                                <p class="fs-30 text-dark font-weight-bold">@Model.Clients.Count</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Inventory Overview*@
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="font-weight-medium text-dark display-5 mb-4">Inventory Overview</p>
                <div class="row">
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card" style="background-color: #F5F7FF">
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="bi bi-arrow-down-square-fill fs-30" style="color: #1DB593"></i>
                                </div>
                                <p class="text-dark mb-2">Quantity in</p>
                                <p class="fs-30 text-dark font-weight-bold">@Model.Entries.Count</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card" style="background-color: #F5F7FF">
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="bi bi-arrow-up-square-fill fs-30" style="color: #FF2F4E"></i>
                                </div>
                                <p class="text-dark mb-2">Quantity out</p>
                                <p class="fs-30 text-dark font-weight-bold">@Model.Exits.Count</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*Stock Overview*@
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="font-weight-medium text-dark display-5 mb-4">Stock Overview</p>
                <div class="row">
                    <table class="table table-striped table-borderless mx-3">
                        <tr>
                            <td scope="row">Low Stock Products</td>
                            <th>2</th>
                        </tr>

                        <tr>
                            <td scope="row">Products Without Description</td>
                            <th>
                                @foreach (var item in Model.Stocks)
                                {
                                    count = 0;
                                    if (item.Description == "" || item.Description == null)
                                    { count++; }
                                }
                                @count
                            </th>
                        </tr>

                        <tr>
                            <td scope="row">No of Items</td>
                            <th>@Model.Stocks.Count</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>